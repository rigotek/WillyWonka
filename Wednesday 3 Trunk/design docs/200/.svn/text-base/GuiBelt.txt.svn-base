//v0 pseudocode

public abstract class GuiBelt implements Gui{ //Belt superclass
    int currX;
	int currY;
	int destX;
	int destY;
    
    private BeltAgent agent = null;

    public void draw(Graphics g){
    	//draw the belt and the part(s) it is transporting
    }
      	
    public void updateLocation(){
    	//compare x with xDest and y with yDest,
    	//updating x and y accordingly
    	if (x < xDest)
        	x++;
        else if (x > xDest)
        	x--;
        if (y < yDest)
        	y++;
        else if (y > yDest)
        	y--;
    }
      	
    public void partsCallback(){
		//do nothing;
	}
		
    public int getCurrentX(){
		return currX;
	}
		
	public int getCurrentY(){
		return currY;
	}
		
	public int getDestinationX(){
		return destX();
	}
		
	public int getDestinationY(){
		return destY();
	}
      	
    public void stateChanged(){
    	//check the 'state' variable and update
    	//xDest and yDest accordingly
    }
}

