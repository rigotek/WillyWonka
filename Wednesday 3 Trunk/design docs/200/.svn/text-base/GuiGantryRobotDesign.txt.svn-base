	public void updateLocation(){
		//Send messages according to State
			
		switch(currState){
			case(TO_IDLE):
			break;
				
			case(AT_IDLE):
				currState = FREE;
			break;
				
			case(TO_GANTRY_BOAT):
				//if (at gantry boat)
					//grab bin
			break;
				
			case(AT_GANTRY_BOAT):
				gantryRobot.animationDone();
			break;
				
			case(TO_FEEDER):
				//if (at feeder)
					//drop bin
			break;
				
			case(AT_FEEDER):
				gantryRobot.animationDone();
			break;
			}	
		super.updateLocation()
	}
		
	public void setAgent(Agent agent){
		//Set the agent
		gantrytRobot = agent;
	}
		
	public void DoGoToIdle(){
		//Set destination X and Y to idle X and Y
		destX = idleX;
		destY = idleY;
			
		currState = TO_IDLE;
	}
		
	public void DoRetrieveBin(GuiBin bin){
		//Set destination X and Y to belt X and Y
		binToLoad = bin;
		destX = boatX;
		destY = boatY;
			
		currState = TO_GANTRY_BOAT;
	}
		
	public void DoLoadBin(GuiFeeder feeder){
		//Pick up empty kit and set destination X and Y to kit X and Y
		destX = feeder.getX();
		destY = feeder.getY();
			
		currState = TO_FEEDER
	}
